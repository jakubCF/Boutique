generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Bin {
  id      Int     @id @default(autoincrement())
  name    String  @db.VarChar(256)
  is_full Boolean @default(false)
  items   Item[]
}

model Item {
  id                         Int       @id @default(autoincrement())
  name                       String    @db.VarChar(256)
  brand                      String?   @db.VarChar(256)
  buy_price                  Float?
  listing_price              Float?
  item_desc                  String?   @db.Text
  purchase_date              DateTime?
  sold_date                  DateTime?
  sold                       Boolean   @default(false)
  web_url                    String?   @unique @db.VarChar(256)
  made_in                    String?   @db.VarChar(50)
  posh_category              String?   @db.VarChar(256)
  posh_picture_url           String?   @db.VarChar(256)
  posh_created_at            DateTime?
  posh_root_ancestor_post_id String?   @unique @db.VarChar(256)
  posh_size                  String?   @db.VarChar(20)
  posh_user                  String?   @db.VarChar(50)
  bin                        Bin?      @relation(fields: [bin_id], references: [id], onDelete: SetNull)
  bin_id                     Int?
  sysdate                    DateTime?
}

model settings {
  id    Int    @id @default(autoincrement())
  key   String @unique @db.VarChar(50)
  value String @db.VarChar(256)
}

model ItemHistory {
  id                         Int       @id @default(autoincrement())
  item_id                    Int       // Foreign key to original item
  name                       String
  brand                      String?
  buy_price                  Float?
  listing_price              Float?
  item_desc                  String?
  purchase_date              DateTime?
  sold_date                  DateTime?
  sold                       Boolean
  web_url                    String?
  made_in                    String?
  posh_category              String?
  posh_picture_url           String?
  posh_created_at            DateTime?
  posh_root_ancestor_post_id String?
  posh_size                  String?
  posh_user                  String?
  bin_id                     Int?
  sysdate                    DateTime?
  
  changed_at                 DateTime  @default(now())
  change_type                String    // e.g. 'CREATE', 'UPDATE', 'DELETE'
}
